<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000" /> <!-- Shadow color -->
            <corners android:radius="4dp" /> <!-- Rounded corners -->
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>